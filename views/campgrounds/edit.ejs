<% include ../partials/header %>
<div class="container">
    <div >
        <h1 style="text-align: center; margin: 25px auto;">Edit <%= campground.name %></h1>
        <div style="width: 100%; margin: 30px auto; max-width: 40rem;">
            <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST" enctype="multipart/form-data">
                <div class="form-group">
                    <input class="form-control" type="text" placeholder="name" name="camp[name]" value="<%=campground.name%>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="number" name="camp[price]" min="0.01" step="0.01" value="<%= campground.price %>">
                </div>
                <div class="form-group">
                    <label for="image">Image</label>
                    <input type="file" id="image" name="image" accept="image/*">
                </div>
                <div class="form-group">
                    <textarea class="form-control" type="text" placeholder="description" name="camp[description]" rows="10"><%=campground.description%></textarea>
                </div>
                <div class="form-group">
                    <lable for="location">Location</lable>
                    <input class="form-control" type="text" name="camp[location]" id="location" value="<%= campground.location %>">
                </div>
                <div class="form-group">
                     <button class="btn btn-lg btn-primary btn-block ">Submit!</button>
                </div>

            </form>
            <a href="/campgrounds">Go Back</a>
        </div>
    </div>
</div>

<% include ../partials/footer %>